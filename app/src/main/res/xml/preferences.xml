<?xml version="1.0" encoding="utf-8" ?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:key="@string/settings_connection_key"
        app:title="@string/settings_connection">
        <ListPreference
            app:defaultValue="@string/settings_connection_ap_values_default"
            app:entries="@array/settings_connection_ap_list"
            app:entryValues="@array/settings_connection_ap_values"
            app:key="@string/settings_connection_ap_key"
            app:title="@string/settings_connection_ap" />
    </PreferenceCategory>
    <PreferenceCategory
        app:key="settings_display"
        app:title="@string/settings_display">
        <SwitchPreferenceCompat
            app:key="settings_display_night_mode"
            app:title="@string/settings_display_night_mode" />
    </PreferenceCategory>
    <PreferenceCategory
        app:key="settings_webview"
        app:title="@string/settings_webview">
        <Preference
            app:key="settings_clear_data"
            app:title="@string/settings_clear_data" />
        <Preference
            app:enabled="false"
            app:key="tbs_version"
            app:title="@string/settings_webview_tbs_version" />
    </PreferenceCategory>
    <PreferenceCategory
        app:key="settings_viewer"
        app:title="@string/settings_viewer">
        <ListPreference
            app:defaultValue="@string/settings_viewer_action_open_internal"
            app:entries="@array/settings_viewer_action_list"
            app:entryValues="@array/settings_viewer_action_list"
            app:key="settings_viewer_default_action"
            app:title="@string/settings_viewer_default_action" />
    </PreferenceCategory>
    <PreferenceCategory
        app:key="settings_about"
        app:title="@string/settings_about">
        <Preference
            app:key="settings_update"
            app:title="@string/settings_update" />
        <Preference
            app:key="settings_group"
            app:summary="@string/settings_group_summary"
            app:title="@string/settings_group" />
        <Preference
            app:key="settings_version"
            app:title="@string/settings_version" />
    </PreferenceCategory>
</PreferenceScreen>
